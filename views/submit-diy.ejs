<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Work</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Share your amazing crafts and inspos with thousands of individuals around the world. Fill out our form to get started and showcase your creativity!</p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-craft" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div class="col-12">
          <label for="email" class="form-label" required>Email</label>
          <input type="email" name="email" id="email" class="form-control" required>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">DIY/Inspo Name</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Short Description</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4" ></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Instructions or Message</label><br>
          <small>Example: Take a sheet of paper / Follow me messages</small>
          <div class="instructionList">
            <div class="instructionDiv mb-1">
              <input type="text" name="instruction" class="form-control" >
            </div>
          </div>
        </div>
        
        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addStepBtn">+ Steps</button>  
          <button type="button" class="btn btn-outline-danger mx-3" id="removeStepBtn">- Steps</button>
        </div>
        

        <div class="col-12">
          <label for="category">Select Category</label>
          <select class="form-select form-control" name="category" aria-label="Category" required>
            <option value="Paper Crafts" selected>Paper Crafts</option>
            <option value="Handmade Gifts">Handmade Gifts</option>
            <option value="Artistic Endeavors">Artistic Endeavors</option>
            <option value="DIY for Kids">DIY for Kids</option>
            <option value="Sewing and Textiles">Sewing and Textiles</option>
            <option value="Upcycling and Repurposing">Upcycling and Repurposing</option>
            <option value="Inspos">Inspos</option>
            <option value="Others">Others</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">DIY Image</label>
          <input type="file" class="form-control" name="image" required>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit Work</button>
        </div>

      </div>
    
    </form>

  </div>
</div>