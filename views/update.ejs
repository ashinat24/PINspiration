<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Update <%-craft.name%></h1>

  </div>
  
  <div class="row justify-content-center">
    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  
    <div class="col-8">
  
      <form action="/craft/<%-craft.id%>/update-craft/<%-craft.email%>" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
  
          <div class="col-12">
            <label for="email" class="form-label" required>Email</label>
            <input type="email" name="email" id="email" class="form-control" value="<%-craft.email%>" required>
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label">DIY Name</label>
            <input type="text" name="name" id="name" class="form-control" value="<%-craft.name%>"required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label">Short Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4" ><%-craft.description%></textarea>
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label">Steps or Instructions</label><br>
            <small>Example: Take a sheet of paper</small>
            <div class="instructionList">
              <% craft.instructions.forEach(function(instruction) { %>
                <div class="instructionDiv mb-1">
                  <input type="text" name="instruction" class="form-control" value="<%- instruction %>">
                </div>
              <% }); %>
            </div>
          </div>
          
          <div class="col-12">
            <button type="button" class="btn btn-outline-primary" id="addStepBtn">+ Steps</button>  
            <button type="button" class="btn btn-outline-danger mx-3" id="removeStepBtn">- Steps</button>
          </div>
          
  
          <div class="col-12">
            <label for="category">Select Category</label>
            <select class="form-select form-control" name="category" aria-label="Category" required>
              <option value="Paper Crafts" <% if (craft.category === 'Paper Crafts') { %>selected<% } %>>Paper Crafts</option>
              <option value="Handmade Gifts" <% if (craft.category === 'Handmade Gifts') { %>selected<% } %>>Handmade Gifts</option>
              <option value="Artistic Endeavors" <% if (craft.category === 'Artistic Endeavors') { %>selected<% } %>>Artistic Endeavors</option>
              <option value="DIY for Kids" <% if (craft.category === 'DIY for Kids') { %>selected<% } %>>DIY for Kids</option>
              <option value="Sewing and Textiles" <% if (craft.category === 'Sewing and Textiles') { %>selected<% } %>>Sewing and Textiles</option>
              <option value="Upcycling and Repurposing" <% if (craft.category === 'Upcycling and Repurposing') { %>selected<% } %>>Upcycling and Repurposing</option>
              <option value="Inspos" <% if (craft.category === 'Inspos') { %>selected<% } %>>Inspos</option>
              <option value="Others" <% if (craft.category === 'Others') { %>selected<% } %>>Others</option>
            </select>
          </div>
          
  
          <div class="col-12">
            <label for="image">DIY Image</label>
            <input type="file" class="form-control" name="image" required>
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Update Work</button>
          </div>
  
        </div>
      

      </form>
  
    </div>
  </div>